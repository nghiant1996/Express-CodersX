extends ../layouts/common.pug
block content
  h1 All users
  
  a.btn.btn-primary(href='/users/create') New 
  
  table.table.mt-2
    tr
      th Avatar
      th Name
      th Delete
      th Update
      th Profile
    each user in users
      tr 
        td
          img(src= user.avatar width="32")
        td= user.name
        td 
          a(href="/users/delete/"+ user.id) Delete
        td
          a(href="/users/update/"+ user.id) Update
        td 
          a(href="/users/profile/"+ user.id) View
          
          
